#!/bin/sh
#
# Provides a simple way to setup the network on the Ahern FC board.
#

INTERFACE="eth0"
ADDRESS="10.0.1.50"
NETMASK="255.255.255.0"
GATEWAY="10.0.1.1"
DNS1="10.0.1.1"

INTERFACES_FILE="/etc/network/interfaces"
DNS_FILE="/etc/resolv.conf"

echo "# Automatically generated by Ahern FC Scripts" > $INTERFACES_FILE
echo "auto lo" >> $INTERFACES_FILE
echo "iface lo inet loopback" >> $INTERFACES_FILE

# Setup interface
echo "" >> $INTERFACES_FILE
echo "auto $INTERFACE" >> $INTERFACES_FILE
echo "iface $INTERFACE inet static" >> $INTERFACES_FILE
echo "  address $ADDRESS" >> $INTERFACES_FILE
echo "  netmask $NETMASK" >> $INTERFACES_FILE
echo "  gateway $GATEWAY" >> $INTERFACES_FILE

#Setup DNS
echo "nameserver $DNS1" > $DNS_FILE
